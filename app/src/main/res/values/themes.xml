<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VadodaraApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#313033</item>
        <item name="colorPrimaryVariant">#313033</item>
        <item name="colorOnPrimary">#6C6A6A</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="titleTextColor">#6C6A6A</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bold_20_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/archivo_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="regular_18_edit" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/archivo_regular</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:background">@drawable/custom_border</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="bold_20_button" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/archivo_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.VadodaraApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VadodaraApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VadodaraApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>